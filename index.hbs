{{!< default}}

  {{!-- center the 'feed' --}}
  <div class="outer">
    <div class="inner">

        {{#foreach posts}}

        <article class="{{post_class}}">

          <section class="post__img">
            <img src="{{img_url feature_image}}">
          </section>

          <section class="post__header">
            <h2><a href="{{url}}">{{title}}</a></h2>
          </section>

          <section class="post__author">
            <h4>{{author}}</h4>
          </section>

          <section class="post__tag">
            <h4>{{primary_tag.name}}</h4>
          </section>

        </article>

        {{/foreach}}

    </div>
  </div>
